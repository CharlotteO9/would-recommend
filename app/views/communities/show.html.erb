<div class="container">
  <%= link_to "Go back to all the communities", communities_path %>

  <h1><%=@community.name%></h1>
  <img src="<%=@community.photo%>" alt="photo of a group of friend">
  <%= link_to "Delete", @community, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <%= link_to "Edit", edit_community_path(@community) %>
  <%= link_to "Add a new member", new_community_membership_path(@community) %>

  <%= render "memberships/index"%>

  <%= render "recommendations/index"%>

</div>
